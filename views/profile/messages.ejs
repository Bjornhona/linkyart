<h1>Messages</h1>
<div class="sender-receiver">
  <div class="senders-div">
    <div class="signup-h">
      <h3>Requests Sent</h3>
    </div>
    <div class="backplate">
      <div class="senders">
        <% if (senders !== null) { %>
          <% senders.forEach((message) => { %>
            <% if (message.reciever !== null) { %>
            <p><%= message.reciever.username %> </p>
            <p><%= message.reciever.name %> </p>  
            <a href="<%= message.reciever.homepage %>" target="_blank">Visit homepage</a>  
          <% } %>
            <hr/>
          <% })%> 
        <% } %>
      </div>
    </div>
  </div>

  <div class="receivers-div">
    <div class="signup-h">
      <h3>Requests Recieved</h3>
    </div>
    <div class="backplate">
      <div class="receiver">
        <% if (recivers !== null)  { %>
          <% recivers.forEach((message) => { %>
            <div><%= message.sender.username %> </div>
            <div> <%= message.sender.name %> </div>
            <div> <%= message.sender.email %> </div>
            <div> <%= message.sender.telephone %> </div>
            <a href="<%= message.sender.homepage %>" target="_blank">Visit homepage</a>
            <hr/>
          <% })%> 
        <% } %>
      
      </div>
    </div>
  </div>
</div>