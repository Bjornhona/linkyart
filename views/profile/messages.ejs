<div class="sender-receiver">
  <div class="senders-div">
    <div class="signup-h">
      <h3>Requests Sent</h3>
    </div>
    <div class="backplate">
      <div class="senders">
        <% if (senders !== null) { %>
          <% senders.forEach((message) => { %>
            <% if (message.reciever !== null) { %>
              <div class="fixx">
                <div class="fix"><%= message.reciever.username %> </div>
                <div class="fix"><%= message.reciever.name %> </div>
                <a href="<%= message.reciever.homepage %>" target="_blank">Visit homepage</a>
              </div>
            <% } %>
            <hr/>
          <% }) %> 
        <% } %>
      </div>
    </div>
  </div>

  <div class="receivers-div">
    <div class="signup-h">
      <h3>Requests Recieved</h3>
    </div>
    <div class="backplate">
      <div class="receiver">
        <% if (recivers !== null)  { %>
          <% recivers.forEach((message) => { %>
            <div class="fixx">
              <div class="fix"><%= message.sender.username %> </div>
              <div class="fix"> <%= message.sender.name %> </div>
              <div class="fix"> <%= message.sender.email %> </div>
              <div class="fix"> <%= message.sender.telephone %> </div>
              <a href="<%= message.sender.homepage %>" target="_blank">Visit homepage</a>
            </div>
            <hr/>
          <% })%> 
        <% } %>
      
      </div>
    </div>
  </div>
</div>